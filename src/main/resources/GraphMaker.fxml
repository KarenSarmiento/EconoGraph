         <tabs>
            <Tab text="Curves">
               <content>
                      <FlowPane fx:id="graphMakerEditCurveFP" prefHeight="102.0" prefWidth="747.0">
                     <ScrollPane fx:id="graphMakerCurveRadioSP">
                        <content>
                             <FlowPane fx:id="graphMakerCurveRadioFP" prefHeight="35.0" prefWidth="730.0">
                                 <Label fx:id="graphMakerSelectACurveL" text="Select a Curve:" />

                             </FlowPane>
                        </content>
                     </ScrollPane>
