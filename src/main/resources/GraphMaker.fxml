               <Button mnemonicParsing="false" onAction="#insertMPC" text="MPC" />
               <Button mnemonicParsing="false" onAction="#initializeShadedRegionTest" text="Shaded Region" />
               <Button fx:id="graphMakerSaveB" mnemonicParsing="false" onAction="#captureAndSetToSave" prefHeight="31.0" prefWidth="112.0" text="Save" />
               <Button mnemonicParsing="false" onAction="#insertGeneralDownwardSloping" text="Downward Sloping" />
               <TextField fx:id="graphMakerDownwardSlopingTF" />
               <Button mnemonicParsing="false" onAction="#insertGeneralUpwardSloping" text="Upward Sloping" />
               <TextField fx:id="graphMakerUpwardSlopingTF" />
