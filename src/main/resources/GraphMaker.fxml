                             <FXCollections fx:factory="observableArrayList">
                                 <String fx:value="Bold" />
                                 <String fx:value="Dotted" />
                                 <String fx:value="Dashed" />
                             </FXCollections>
                         </items>
                     </ComboBox>
                      </FlowPane>
               </content>
            </Tab>
             <Tab text="Shaded Regions">
